input#input(type='text' ng-model='inputLine' ng-keydown='moveCursor($event)' ng-cloak ng-trim='false' ng-blur='focus()' style='position:fixed;right:-9999px')

#cli-body.row.cli-body(ng-click='focus()')
	#history
	.input-line
		.prefix(ng-cloak) {{inputLinePrefix}}
		.input-wrapper
			.input(ng-cloak) {{inputLine}}
			.cursor(style='position:absolute;' ng-style='{left: cursorOffset}')